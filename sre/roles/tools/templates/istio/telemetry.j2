---
apiVersion: telemetry.istio.io/v1
kind: Telemetry
metadata:
  name: istio-telemetry
  namespace: {{ tools_helm_releases.istio.namespace }}
spec:
  accessLogging:
    - providers:
        - name: opentelemetry
{% if tools_installation_plan.jaeger.enabled | default(true) %}
  tracing:
    - providers:
        - name: jaeger
      randomSamplingPercentage: 0
{% endif %}
