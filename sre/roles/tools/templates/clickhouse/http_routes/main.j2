---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ tools_instances.clickhouse.names.main }}
  namespace: {{ tools_instances.clickhouse.namespace }}
spec:
  parentRefs:
    - name: {{ gateway.name }}
      namespace: {{ tools_instances.kubernetes_gateways.namespace }}
  rules:
    - backendRefs:
        - name: clickhouse-{{ tools_instances.clickhouse.names.main }}
          port: 8123
{% if route.path.match_prefix | default(false) %}
      matches:
        - path:
            type: PathPrefix
            value: /clickhouse/{{ tools_instances.clickhouse.names.main }}/
{% endif %}
      filters:
        - type: ResponseHeaderModifier
          responseHeaderModifier:
            add: {{ tools_http_route_response_headers }}
{% if route.path.rewrite_url | default(false) %}
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplacePrefixMatch
              replacePrefixMatch: /
{% endif %}
