---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ tools_helm_releases.kubernetes_topology_monitor.name }}
  namespace: {{ tools_helm_releases.kubernetes_topology_monitor.namespace }}
spec:
  parentRefs:
    - name: {{ gateway.name }}
      namespace: {{ tools_instances.kubernetes_gateways.namespace }}
  rules:
    - backendRefs:
        - name: topology-monitor-svc
          port: 8080
{% if route.path.match_prefix | default(false) %}
      matches:
        - path:
            type: PathPrefix
            value: /topology/
{% endif %}
      filters:
        - type: ResponseHeaderModifier
          responseHeaderModifier:
            add: {{ tools_http_route_response_headers }}
{% if route.path.rewrite_url | default(false) %}
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplacePrefixMatch
              replacePrefixMatch: /
{% endif %}
