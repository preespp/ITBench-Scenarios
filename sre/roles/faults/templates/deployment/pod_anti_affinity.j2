---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/component: pod-anti-affinity-fault
    app.kubernetes.io/name: {{ [node_index, node.metadata.name] | join("-") }}
    app.kubernetes.io/managed-by: ITBench
  name: {{ [node_index, node.metadata.name] | join("-") }}
  namespace: {{ fault_args.workload.namespace }}
spec:
  selector:
    matchLabels:
      app.kubernetes.io/component: pod-anti-affinity-fault
      app.kubernetes.io/name: {{ [node_index, node.metadata.name] | join("-") }}
      app.kubernetes.io/managed-by: ITBench
  template:
    metadata:
      labels:
        app.kubernetes.io/component: pod-anti-affinity-fault
        app.kubernetes.io/name: {{ [node_index, node.metadata.name] | join("-") }}
        app.kubernetes.io/managed-by: ITBench
    spec:
      containers:
        - name: worker
          image: {{ container_image }}
          command:
            - /bin/sh
          args:
            - -c
            - "sleep infinity"
      nodeSelector:
        kubernetes.io/hostname: {{ node.metadata.name }}
